@{
    ViewBag.Title = "Home Page";
}

<div class="col-xs-8">

    <h1>
        <img src="http://sf.gwebtools.com/images/icons/binaryIcon.png">
        Bit Calculator
    </h1>

    <form id="calc" method="post" action="/home/index" class="form-inline text-left">

        <div class="control-group">
            <label class="control-label" for="qt">Quantity</label>
            <div class="controls">
                <input class="form-control" name="qt" type="text"
                       value="@if (ViewBag.qt != null)
                {
                    @ViewBag.qt
                }
                else
                {@:1
}"/>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="type">Type</label>
            <div class="controls">
                <select name="type" class="form-control">
                    <option value="">Choose...</option>
                    <option value="0 bit">bit - b</option>
                    <option value="0 byte">Byte - B</option>
                    <option value="1 bit">Kilobit - Kb</option>
                    <option value="1 byte">Kilobyte - KB</option>
                    <option value="2 bit">Megabit - Mb</option>
                    <option value="2 byte">Megabyte - MB</option>
                    <option value="3 bit">Gigabit - Gb</option>
                    <option value="3 byte">Gigabyte - GB</option>
                    <option value="4 bit">Terabit - Tb</option>
                    <option value="4 byte">Terabyte - TB</option>
                    <option value="5 bit">Petabit - Pb</option>
                    <option value="5 byte">Petabyte - PB</option>
                    <option value="6 bit">Exabit - Eb</option>
                    <option value="6 byte">Exabyte - EB</option>
                    <option value="7 bit">Zettabit - Zb</option>
                    <option value="7 byte">Zettabyte - ZB</option>
                    <option value="8 bit">Yottabit - Yb</option>
                    <option value="8 byte">Yottabyte - YB</option>
                </select>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="kilo">Kilo</label>
            <div class="controls">
                <select name="kilo" class="form-control">
                    @if (ViewBag.KiloValue == 1024)
                    {
                        <option value="1024" selected="selected">1024</option>
                        <option value="1000">1000</option>
                    }
                    else
                    {
                        <option value="1024">1024</option>
                        <option value="1000" selected="selected">1000</option>
                    }
                </select>
            </div>
        </div>

        <div class="control-group">
            <input class="btn btn-primary btn-sm" type="submit" value="GO">
        </div>
    </form>

    <div id="resPost" style="margin-top:15px">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <td colspan="2">
                        Storage (Kilo = @ViewBag.KiloValue bits)
                    </td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td width="120">Bit</td>
                    <td width="150">@(ViewBag.CalcBit)</td>
                </tr>
                <tr>
                    <td width="120">Byte</td>
                    <td width="150">@(ViewBag.CalcByte)</td>
                </tr>
                <tr>
                    <td width="120">Kilobit</td>
                    <td width="150">@(ViewBag.CalcBit / ViewBag.KiloValue)</td>
                </tr>
                <tr>
                    <td width="120">Kilobyte</td>
                    <td width="150">@(ViewBag.CalcByte / ViewBag.KiloValue)</td>
                </tr>
                <tr>
                    <td width="120">Megabit</td>
                    <td width="150">@(ViewBag.CalcBit / Math.Pow((double)ViewBag.KiloValue, 2))</td>
                </tr>
                <tr>
                    <td width="120">Megabyte</td>
                    <td width="150">@(ViewBag.CalcByte / Math.Pow((double)ViewBag.KiloValue, 2))</td>
                </tr>
                <tr>
                    <td width="120">Gigabit</td>
                    <td width="150">@(ViewBag.CalcBit / Math.Pow((double)ViewBag.KiloValue, 3))</td>
                </tr>
                <tr>
                    <td width="120">Gigabyte</td>
                    <td width="150">@(ViewBag.CalcByte / Math.Pow((double)ViewBag.KiloValue, 3))</td>
                </tr>
                <tr>
                    <td width="120">Terabit</td>
                    <td width="150">@(ViewBag.CalcBit / Math.Pow((double)ViewBag.KiloValue, 4))</td>
                </tr>
                <tr>
                    <td width="120">Terabyte</td>
                    <td width="150">@(ViewBag.CalcByte / Math.Pow((double)ViewBag.KiloValue, 4))</td>
                </tr>
                <tr>
                    <td width="120">Petabit</td>
                    <td width="150">@(ViewBag.CalcBit / Math.Pow((double)ViewBag.KiloValue, 5))</td>
                </tr>
                <tr>
                    <td width="120">Petabyte</td>
                    <td width="150">@(ViewBag.CalcByte / Math.Pow((double)ViewBag.KiloValue, 5))</td>
                </tr>
                <tr>
                    <td width="120">Exabit</td>
                    <td width="150">@(ViewBag.CalcBit / Math.Pow((double)ViewBag.KiloValue, 6))</td>
                </tr>
                <tr>
                    <td width="120">Exabyte</td>
                    <td width="150">@(ViewBag.CalcByte / Math.Pow((double)ViewBag.KiloValue, 6))</td>
                </tr>
                <tr>
                    <td width="120">Zettabit</td>
                    <td width="150">@(ViewBag.CalcBit / Math.Pow((double)ViewBag.KiloValue, 7))</td>
                </tr>
                <tr>
                    <td width="120">Zettabyte</td>
                    <td width="150">@(ViewBag.CalcByte / Math.Pow((double)ViewBag.KiloValue, 7))</td>
                </tr>
                <tr>
                    <td width="120">Yottabit</td>
                    <td width="150">@(ViewBag.CalcBit / Math.Pow((double)ViewBag.KiloValue, 8))</td>
                </tr>
                <tr>
                    <td width="120">Yottabyte</td>
                    <td width="150">@(ViewBag.CalcByte / Math.Pow((double)ViewBag.KiloValue, 8))</td>
                </tr>
            </tbody>
        </table>
    </div>


</div>