<div class="login">
    <div class="login-screen">
        <div class="login-form">
            <div id="register-inputs">
                <div class="form-group">
                    <input type="text" class="form-control login-field" value="" placeholder="Username" id="register-name" name="username">
                    <label class="login-field-icon fui-user" for="login-name"></label>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control login-field" value="" placeholder="Password" id="register-pass" name="password">
                    <label class="login-field-icon fui-lock" for="login-pass"></label>
                </div>
            </div>

            <a class="btn btn-success btn-lg btn-block" id="signup-submit">Register</a>
            <a class="login-link" href="#/login">Already have an account? Login!</a>
        </div>
    </div>
</div>