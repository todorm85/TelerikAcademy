<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">

    <objectAnimator
        android:duration="700"
        android:propertyName="alpha"
        android:valueTo="1" />

    <set android:ordering="together">
        <objectAnimator
            android:duration="700"
            android:propertyName="scaleX"
            android:valueFrom="1"
            android:valueTo="0.8" />

        <objectAnimator
            android:duration="700"
            android:propertyName="scaleY"
            android:valueFrom="1"
            android:valueTo="0.8" />

        <objectAnimator
            android:duration="700"
            android:propertyName="translationYBy"
            android:valueTo="5" />
    </set>
    <objectAnimator
        android:duration="@android:integer/config_mediumAnimTime"
        android:propertyName="x"
        android:valueFrom="120dp"
        android:valueTo="220dp" />
    <set android:ordering="together">
        <objectAnimator
            android:duration="700"
            android:propertyName="translationYBy"
            android:valueTo="-5" />

        <objectAnimator
            android:duration="700"
            android:propertyName="scaleX"
            android:valueFrom="0.8"
            android:valueTo="1" />

        <objectAnimator
            android:duration="700"
            android:propertyName="scaleY"
            android:valueFrom="0.8"
            android:valueTo="1" />
    </set>
    <objectAnimator
        android:duration="@android:integer/config_shortAnimTime"
        android:propertyName="alpha"
        android:valueTo="0" />
    <objectAnimator
        android:duration="@android:integer/config_shortAnimTime"
        android:propertyName="x"
        android:valueTo="0" />
    <objectAnimator
        android:duration="@android:integer/config_mediumAnimTime"
        android:propertyName="x"
        android:valueFrom="220dp"
        android:valueTo="120dp" />
</set>